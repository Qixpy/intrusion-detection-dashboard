<svg width="512" height="512" viewBox="0 0 512 512" xmlns="http://www.w3.org/2000/svg">
  <!-- Background with gradient -->
  <defs>
    <linearGradient id="bgGradLarge" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1e293b;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#334155;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#0f0f23;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="shieldGradLarge" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#00d4aa;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#22d3ee;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#7c3aed;stop-opacity:1" />
    </linearGradient>
    <filter id="glowLarge">
      <feGaussianBlur stdDeviation="4" result="coloredBlur"/>
      <feMerge> 
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
    <filter id="innerGlow">
      <feGaussianBlur stdDeviation="2" result="coloredBlur"/>
      <feMerge> 
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>
  
  <!-- Background -->
  <rect width="512" height="512" fill="url(#bgGradLarge)" rx="64"/>
  
  <!-- Outer shield glow -->
  <path d="M256 64 L128 96 L128 256 C128 384 256 448 256 448 C256 448 384 384 384 256 L384 96 Z" 
        fill="none" stroke="#00d4aa" stroke-width="6" filter="url(#glowLarge)" opacity="0.6"/>
  
  <!-- Main shield -->
  <path d="M256 80 L144 108 L144 256 C144 372 256 428 256 428 C256 428 368 372 368 256 L368 108 Z" 
        fill="url(#shieldGradLarge)" opacity="0.95"/>
  
  <!-- Inner shield border -->
  <path d="M256 90 L154 114 L154 256 C154 362 256 414 256 414 C256 414 358 362 358 256 L358 114 Z" 
        fill="none" stroke="#0f0f23" stroke-width="2" opacity="0.3"/>
  
  <!-- Central monitoring system -->
  <ellipse cx="256" cy="224" rx="80" ry="48" fill="#0f0f23" opacity="0.9"/>
  <ellipse cx="256" cy="224" rx="64" ry="38" fill="url(#shieldGradLarge)"/>
  <circle cx="256" cy="224" r="20" fill="#0f0f23"/>
  <circle cx="260" cy="220" r="8" fill="#ffffff" opacity="0.7"/>
  <circle cx="256" cy="224" r="4" fill="#00d4aa"/>
  
  <!-- Network topology nodes -->
  <circle cx="192" cy="160" r="12" fill="#ff4444" filter="url(#innerGlow)"/>
  <circle cx="320" cy="160" r="12" fill="#ffaa00" filter="url(#innerGlow)"/>
  <circle cx="176" cy="288" r="12" fill="#44ff44" filter="url(#innerGlow)"/>
  <circle cx="336" cy="288" r="12" fill="#44ff44" filter="url(#innerGlow)"/>
  <circle cx="256" cy="320" r="10" fill="#22d3ee" filter="url(#innerGlow)"/>
  
  <!-- Smaller threat indicators -->
  <circle cx="220" cy="140" r="6" fill="#ff6b6b" opacity="0.8"/>
  <circle cx="292" cy="140" r="6" fill="#ffa726" opacity="0.8"/>
  <circle cx="200" cy="340" r="6" fill="#66bb6a" opacity="0.8"/>
  <circle cx="312" cy="340" r="6" fill="#66bb6a" opacity="0.8"/>
  
  <!-- Connection lines (data flow) -->
  <line x1="192" y1="160" x2="256" y2="224" stroke="#00d4aa" stroke-width="3" opacity="0.6"/>
  <line x1="320" y1="160" x2="256" y2="224" stroke="#00d4aa" stroke-width="3" opacity="0.6"/>
  <line x1="176" y1="288" x2="256" y2="224" stroke="#00d4aa" stroke-width="3" opacity="0.6"/>
  <line x1="336" y1="288" x2="256" y2="224" stroke="#00d4aa" stroke-width="3" opacity="0.6"/>
  <line x1="256" y1="320" x2="256" y2="224" stroke="#00d4aa" stroke-width="3" opacity="0.6"/>
  
  <!-- Digital grid pattern -->
  <g opacity="0.2">
    <line x1="160" y1="360" x2="352" y2="360" stroke="#00d4aa" stroke-width="2"/>
    <line x1="170" y1="370" x2="342" y2="370" stroke="#00d4aa" stroke-width="1"/>
    <line x1="180" y1="380" x2="332" y2="380" stroke="#00d4aa" stroke-width="1"/>
    <line x1="190" y1="390" x2="322" y2="390" stroke="#00d4aa" stroke-width="1"/>
  </g>
  
  <!-- Security lock elements -->
  <rect x="240" y="340" width="32" height="20" fill="none" stroke="#00d4aa" stroke-width="2" rx="3"/>
  <circle cx="256" cy="345" r="3" fill="#00d4aa"/>
  
  <!-- Binary code pattern -->
  <g opacity="0.15" fill="#00d4aa" font-family="monospace" font-size="8">
    <text x="160" y="400">1011001010110010</text>
    <text x="160" y="410">0101101001011010</text>
    <text x="160" y="420">1100101101001011</text>
  </g>
</svg>
